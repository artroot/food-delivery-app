{
  "name": "food-delivery-app",
  "version": "1.0.0",
  "description": "RESTful api for management food delivery service",
  "main": "dist/server.js",
  "config": {
    "server": {
      "host": "127.0.0.1",
      "port": "4000"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artroot/food-delivery-app.git"
  },
  "author": "Artem Semenishch <a.semenishch@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artroot/food-delivery-app/issues"
  },
  "homepage": "https://github.com/artroot/food-delivery-app#readme",
  "dependencies": {
    "koa": "~2.13.1",
    "koa-router": "~10.0.0",
    "typescript": "~4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.6",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.10",
    "jest": "^26.6.3",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4"
  },
  "engines": {
    "node": ">= 14.15.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ]
  }
}
